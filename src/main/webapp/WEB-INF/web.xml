<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>splash.servlets.logout</servlet-class>
    </servlet>
    
    <!-- Login servlet -->
    <servlet>
        <servlet-name>login_</servlet-name>
        <servlet-class>splash.servlets.login_</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login_</servlet-name>
        <url-pattern>/login_</url-pattern>
    </servlet-mapping>
    
    <!-- Register servlet -->
    <servlet>
        <servlet-name>register_</servlet-name>
        <servlet-class>splash.servlets.register_</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register_</servlet-name>
        <url-pattern>/register_</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>subscribe</servlet-name>
        <servlet-class>splash.servlets.subscribe</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>block</servlet-name>
        <servlet-class>splash.servlets.block</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>readLater</servlet-name>
        <servlet-class>splash.servlets.readLater</servlet-class>
    </servlet>
    
    <!-- Add-feeds servlet -->
    <servlet>
        <servlet-name>add_feeds</servlet-name>
        <servlet-class>splash.servlets.add_feeds</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add_feeds</servlet-name>
        <url-pattern>/add_feeds</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>fetch_blocked</servlet-name>
        <servlet-class>splash.servlets.fetch_blocked</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>subscribe</servlet-name>
        <url-pattern>/subscribe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>block</servlet-name>
        <url-pattern>/block</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>readLater</servlet-name>
        <url-pattern>/readLater</url-pattern>
    </servlet-mapping>
        
    <!-- Login page -->
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- Register-->
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <!-- Add-feed page -->
    <servlet>
        <servlet-name>add_feed</servlet-name>
        <jsp-file>/add_feed.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>add_feed</servlet-name>
        <url-pattern>/add_feed</url-pattern>
    </servlet-mapping>
    
    <!-- Index -->
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    
    <!-- Profile -->
    <servlet>
        <servlet-name>profile</servlet-name>
        <jsp-file>/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
   
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>